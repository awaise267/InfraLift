<body>
<script>$(document).ready(function(c) {
	$('.close').on('click', function(c){
		$('.login-form').fadeOut('slow', function(c){	  		
		 	window.location.href="/";
		});
	});	  
});


    function IsZipCode()
	{
		x = document.forms["SignUp"]["inputZip"].value;
	    if (x.length != 5) {
         alert("Zip must be of 5 digit length");
         return false;
        }
	}  
</script>
 <!--SIGN UP-->
<div class="login-form">
	<div class="close"> </div>
		<img src="/images/InfraLiftLogo.png"/>
		<h1>User Signup</h1>
			<form method="POST" action="/afterSignUp" onsubmit="return IsZipCode()">
				
				
				<input type="text" class="First Name" placeholder="First Name" name="inputFname" required/>
				<input type="text" class="email" placeholder="Last Name" name="inputLname" required/>
				
				<input type="email" class="email" placeholder="Email Address" name="inputEmail" required/>
				<input type="password" class="password" placeholder="Password" name="inputPassword" required/>
				
				<div class="radioRow">
				<label for="dob" class="lbl">Date Of Birth</label>
				<input type="date" class="date" placeholder="Date Of Birth" name="inputDOB" required/>
				</div>	
				                
				<div class="radioRow">
				<label class="lbl" for="inputGender">Enter your Gender</label>		                   
              	<input type="radio" class="radio" name="inputGender" value="Male" id="inputMale" required><p class="radioP"> Male </p>
             	<input type="radio" class="radio" name="inputGender" value="Female" id="inputFemale" required><p class="radioP"> Female</p>
				</div>	
				 
				 <input type="text" class="email" placeholder="State" name="inputState" required/>
				 <input type="text" class="email" placeholder="Country" name="inputCountry" required/>
				 <input type="number" class="email" placeholder="Zipcode" name="inputZip" required/>                  
					
							<input type="submit" class="formEnd" value="Sign up">
			</form>
</div>
